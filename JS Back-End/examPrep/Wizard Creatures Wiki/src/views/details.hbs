<main>
    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Name: {{name}}</h1>
                    <h3>Created by an author: {{wizardOwner.firstName}} {{wizardOwner.lastName}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{species}}</p>
                        <p class="card-skin">Skin colour: {{skinColour}}</p>
                        <p class="card-eye">Eye Colour: {{eyeColour}}</p>
                    </div>

                    <p class="disc">Description: {{description}}</p>

                    {{#if user}}
                    <div class="social-btn">
                        {{#if isOwner}}
                        <a href="/wizards/{{_id}}/edit" class="edit-btn">Edit</a>
                        <a href="/wizards/{{_id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                        {{#if isVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>

                        {{else}}
                        <a href="/wizards/{{_id}}/vote" class="vote-up">Vote</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{image}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <p class="PV">Total rating of votes: {{wizardInfo.length}}</p>
                    </div>
                    {{#if emails}}
                    <p class="disc">People who voted for the post - {{emails}}</p>
                    {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>

</main>